<h1>Silahkan Isi Formulir Berikut Untuk Mendaftar</h1>
<%= render 'shared/error_messages' %>
<%= form_for(@user) do |f| %>	
		<div id="class">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
		</div>
	
		<div id="class">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
		</div>
	
		<div id="class">
		<%= f.label :password %><br />
		<%= f.password_field :password %>
		</div>

		<div id="class">	
		<%= f.label :password_confirmation, "Konfirmasi Password" %><br />
		<%= f.password_field :password_confirmation %>
		</div>
		
		<div id="action">
		<%= f.submit "Daftar" %>
		</div>
<% end %>